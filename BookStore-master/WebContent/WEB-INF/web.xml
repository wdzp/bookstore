<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Buy</servlet-name>
        <servlet-class>com.servlet.BuyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Buy</servlet-name>
        <url-pattern>/buy.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>com.servlet.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>com.servlet.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Back</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Back</servlet-name>
        <url-pattern>/back.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckOut</servlet-name>
        <servlet-class>com.servlet.CheckOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckOut</servlet-name>
        <url-pattern>/checkout.action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Page</servlet-name>
        <servlet-class>com.servlet.PageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Page</servlet-name>
        <url-pattern>/page.action</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Serach</servlet-name>
        <servlet-class>com.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Serach</servlet-name>
        <url-pattern>/serach.action</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>